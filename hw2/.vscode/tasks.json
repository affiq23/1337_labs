{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-std=c++11"
            ],            
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "type": "shell",
    "shell": {
        "executable": "/bin/bash",
        "args": [
            "-c"
        ],
        "windows": {
            "executable": "cmd.exe",
            "args": [
                "/C"
            ]
        }
    }
}
